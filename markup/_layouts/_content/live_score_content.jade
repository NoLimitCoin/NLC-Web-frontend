mixin repeat(times)
	each i in new Array(times)
		div.matches__result
			div.matches__result-header
				span Wed. 12th 10:45
			div.matches__content
				ul.matches__leaders-list
					li
						span <img src="http://localhost:3000/assets/img/emblem/MU.png" alt="MU">
						span cl
						span 7
					li
						span <img src="http://localhost:3000/assets/img/emblem/MU.png" alt="MU">
						span cin
						span 448
					li
						span Final

mixin current-table(times)
	each i in new Array(times)
		tr
			td Football 1775 LONGFootballFootballFootballFootball
			td TEAM NAME LONG 111
			td 350 min
			td 114/150

mixin contest-info(times)
	each i in new Array(times)
		tr
			td 1.
			td Username xxx
			td Score

section.nl-section.nl-players.nl-live-score
	div.container.container-wider
		div.row
			div.col-sm-12.page-heading
				h1 Live scores
		div.row
			div.col-sm-12.col-lg-6.col-xl-8
				h6.d-inline-block Matches
				div.matches
					div.matches__scrollarea
						+repeat(12)

			div.col-sm-12.col-lg-6.col-xl-4
				h6.d-inline-block My current contests
				a.btn.btn-primary.btn-sm.btn-inline Refresh
				div.current-contents
					div.nl-table-responsive
						div.nl-table-mw.table-current-contests
							table.table.table-striped
								thead
									tr
										th Contests name
										th Team name
										th PMR
										th Rank
							div.nl-table-scroll2
								table.table.table-striped
									tbody
										+current-table(8)

		div.row
			div.col-sm-12.col-lg-6.col-xl-4
				h6.d-inline-block Contest info
				div.nl-contest-info-table
					div.table-heading
						div.dropdown
							button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Contest touchdowns all day!
							div.dropdown-menu(aria-labelledby="dropdownMenuButton")
								a.dropdown-item Team A
								a.dropdown-item Team B
								a.dropdown-item Team C

					table.table.table-info1
						tbody
							tr
								td
									div.leaders-list
										p.tit First Game
										p 09/14/2017 08:25 AM
										p.tit Week
										p 3
										p.tit Prize money
										p 1.000 NLC
										p.tit
										button.btn.btn-primary Payout
								td
									div.leaders-list
										p.tit Last game
										p 19/07-2017 08:25 AM
										p.tit Buy-in
										p 10
										p.tit Registered Teams
										p 198 / 200
										p.tit
										button.btn.btn-warning Withdraw

					table.table.table-info3
						thead
							tr
								th
								th Contestant
								th Score
					div.nl-table-scroll2
						table.table.table-striped.table-info4
							tbody
								+contest-info(11)
