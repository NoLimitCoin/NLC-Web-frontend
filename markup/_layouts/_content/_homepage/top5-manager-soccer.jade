	});
	$(".modal-content .modal-body a").click(function(){
		$('#top5-manager-content .top-level-panel2').hide('tab');
		$($(this).attr('value')).show('tab');
		$("h5.text-center.visible-xxs.subtitle span.week").html($(this).text());
		$('#weekModal').modal('hide');
	});
	$("ul#dropdown-in-week").hover(function(){
		$("button.btn.btn-primary").css( "box-shadow", "none" );
	});

	

